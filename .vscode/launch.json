{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    // python -m debugpy --listen 5678 --wait-for-client ./myscript.py
    "version": "0.2.0",
    "configurations": [
        {
            "name": "pytest",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "tests",
                "-v"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "FastAPI (Poetry + Uvicorn)",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "mine_backend.main:app",
                "--reload",
                "--host",
                "0.0.0.0",
                "--port",
                "8000"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Python: Arquivo Atual",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
        },
        {
            "name": "Python: mine_backend/main.py",
            "type": "debugpy",
            "request": "launch",
            "program": "mine_backend/main.py",
            "args": [],
            "console": "integratedTerminal",
            "justMyCode": false,
        },
        {
            "name": "Python: Attach",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5678
            }
        },
        {
          "name": "ng serve (mine_ui)",
          "type": "chrome",
          "request": "launch",
          "preLaunchTask": "npm: start (mine_ui)",
          "url": "http://localhost:4200/",
          "webRoot": "${workspaceFolder}/mine_ui"
        },
        {
          "name": "ng test",
          "type": "chrome",
          "request": "launch",
          "preLaunchTask": "npm: test (mine_ui)",
          "url": "http://localhost:9876/debug.html",
          "webRoot": "${workspaceFolder}/mine_ui"
        }
    ]
}